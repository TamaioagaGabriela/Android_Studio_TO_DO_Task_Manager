<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <corners
        android:topLeftRadius="10dp"
        android:radius="40dp"
        />

    <gradient
        android:angle="45"
        android:gradientRadius="280dp"
        android:startColor="#ffb99a"

        android:endColor="@color/colorOrange"
        android:type="linear"
        />

    <size
        android:width="100dp"
        android:height="18dp"
        />

    <stroke
        android:width="1dp"
        android:color="#851d41"
        />

    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp"
        />

</shape>